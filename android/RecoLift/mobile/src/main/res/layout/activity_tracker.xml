<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.daranguiz.recolift.TrackerActivity">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Begin Set"
        android:id="@+id/button_begin_set"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/text_weight_input"
        android:layout_below="@+id/button_begin_set"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:text="Weight" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Set Stopped"
        android:id="@+id/text_set_status"
        android:layout_alignBottom="@+id/button_begin_set"
        android:layout_toRightOf="@+id/button_begin_set"
        android:layout_toEndOf="@+id/button_begin_set" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Num Reps"
        android:id="@+id/text_num_reps"
        android:layout_below="@+id/text_weight_input"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Input"
        android:id="@+id/button_weight_input"
        android:layout_alignBottom="@+id/text_weight_input"
        android:layout_toRightOf="@+id/text_set_status"
        android:layout_toEndOf="@+id/text_set_status" />

</RelativeLayout>
